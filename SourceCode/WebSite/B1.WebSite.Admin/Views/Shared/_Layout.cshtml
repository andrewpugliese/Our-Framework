  <li><a href="#">Sub Item 1.4</a></li>
  <li><a href="#">Sub Item 1.2</a></li>
  <li><a href="#">Sub Item 1.3</a></li>
  <li><a href="#">Sub Item 1.4</a></li>
  </ul>
</li>
<li>@Html.ActionLink(Constants.About, Constants.About, Constants.Home)</li>
</ul>
<br style="clear: left" />
</div>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>@ViewBag.DateTime</h1>
            </div>
            <div id="Status">
            <p></p>
                <h4>@ViewBag.Status</h4>
            </div>

            <div id="logindisplay">
                @Html.Partial(Constants._Page_SignonPartial)
            </div>

            <div id="status">@ViewBag.Status</div>
